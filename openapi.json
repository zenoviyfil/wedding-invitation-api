  "tags": [
    {
      "name": "campers",
      "description": "get filtered list of campers for rental"
    }
  ],
  "paths": {
    "/campers": {
      "get": {
        "tags": [
          "campers"
        ],
        "summary": "Get list of campers",
        "description": "Get list of campers",
        "operationId": "getCampers",
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "schema": {
              "type": "integer",
              "default": 1
            },
            "description": "the number of page to select from collection"
          },
          {
            "in": "query",
            "name": "limit",
            "schema": {
              "type": "integer",
              "default": 10
            },
            "description": "the number of records to return"
          },
          {
            "in": "query",
            "name": "location",
            "schema": {
              "type": "string",
              "default": "",
              "example": "Lviv"
            },
            "description": "the city name for filter records"
          },
          {
            "in": "query",
            "name": "form",
            "schema": {
              "type": "string",
              "default": "",
              "example": "alcove"
            },
            "description": "the form of vehicle"
          },
          {
            "in": "query",
            "name": "details_airConditioner",
            "schema": {
              "type": "string",
              "default": "",
              "example": "true"
            },
            "description": "is air conditioner?"
          },
          {
            "in": "query",
            "name": "transmission",
            "schema": {
              "type": "string",
              "default": "",
              "example": "automatic"
            },
            "description": "what transmission?"
          },
          {
            "in": "query",
            "name": "details_kitchen",
            "schema": {
              "type": "string",
              "default": "",
              "example": "true"
            },
            "description": "is kitchen?"
          },
          {
            "in": "query",
            "name": "details_shower",
            "schema": {
              "type": "string",
              "default": "",
              "example": "true"
            },
            "description": "is shower?"
          },
          {
            "in": "query",
            "name": "details_TV",
            "schema": {
              "type": "string",
              "default": "",
              "example": "true"
            },
            "description": "is TV?"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful operation",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "total": {
                      "type": "integer",
                      "description": "total records that match filters"
                    },
                    "page": {
                      "type": "integer",
                      "description": "current page"
                    },
                    "limit": {
                      "type": "integer",
                      "description": "item at page"
                    },
                    "data": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Camper"
                      }
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "Not found"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    }
  },
